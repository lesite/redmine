<% content_for :header_tags do -%>
  <%= stylesheet_link_tag 'global_project_view', :plugin => 'redmine_global_project_view' %>
<% end -%>

<h2><%= l(:global_project_view) %></h2>

<% @projects.each do |project| %>
	<%= render "project", 
			:project => project, 
			:subprojects => project.children.visible,
			:trackers => project.rolled_up_trackers,
			:news => project.news.find(:all, :limit => 5, :include => [ :author, :project ], :order => "#{News.table_name}.created_on DESC"),
			:open_issues_by_tracker => Issue.visible.count(:group => :tracker, :include => [:project, :status, :tracker], :conditions => ["(#{project.project_condition(Setting.display_subprojects_issues?)}) AND #{IssueStatus.table_name}.is_closed=?", false]),
			:total_issues_by_tracker => Issue.visible.count(:group => :tracker, :include => [:project, :status, :tracker], :conditions => project.project_condition(Setting.display_subprojects_issues?)),
			:users_by_role => project.users_by_role
			%>
<% end %>