<% content_for :header_tags do -%>
  <%= stylesheet_link_tag 'global_roadmap', :plugin => 'redmine_global_roadmap' %>
<% end -%>

<h1><%= l(:global_roadmap) %></h1>

<br /><br />

<div id="roadmap">
	<% @items.each do |item| -%>
		<h2><%= item[:project].name %></h2>
		<% item[:versions].each do |version| -%>
			<%= render "version", :version => version, :project => item[:project], :issues_by_version => item[:issues_by_version] %>
		<% end -%>
		<br /><br />
	<% end -%>
</div>
